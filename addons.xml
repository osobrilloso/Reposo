<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.pelisalacarta"
    name="pelisalacarta"
    version="Edition"
    provider-name="Community">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.libtorrent" optional="true"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="es">Películas y series a la carta</summary>
    <description lang="es">Películas, series, documentales, anime, ... Todo está en Internet, y ahora en tu media center.</description>
    <summary lang="en">Movies and TV Shows on demand</summary>
    <description lang="en">Movies, Series, Documentaries, Anime, ... Everything is on the net, and now on your media center.</description>
    <platform>all</platform>
    <license>GNU GPL v3</license>
    <website>http://blog.tvalacarta.info/plugin-xbmc/pelisalacarta</website>
    <email>tvalacarta@gmail.com</email>
    <source>https://github.com/pelisalacarta-ce/pelisalacarta-ce</source>
  </extension>
  <extension point="xbmc.service" library="library_service.py" start="login|startup">
  </extension>
</addon>

<addon id="plugin.video.plexus-streams"
       name="Plexus-Streams"
       version="1.0.15m"
       provider-name="D4FC">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup" version="3.0.8"/>
    <import addon="script.module.pytz" />
    <import addon="script.module.requests" />
    <import addon="script.module.mechanize" version="0.2.6"/>
    <import addon="program.plexus" />
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Plexus wrapper</summary>
    <description lang="en">P2P-Streams fork that works as a Plexus wrapper</description>
    <disclaimer lang="en">The authors does not host nor distribute any of the content you may watch using this addon. The authors have no affiliation with any of the content providers. This addon does not track its users.</disclaimer>
    <platform>all</platform>
  </extension>
</addon>

<addon
  id="plugin.video.SportsDevil"
  version="Catoal.09"
  name="SportsDevil"
  provider-name="SportsDevil">
  <requires>
   <import addon="xbmc.python" version="2.14.0"/>
   <import addon="script.module.dateutil" />
   <import addon="script.module.simplejson" />
   <import addon="script.module.six" />
   <import addon="script.module.requests" />
   <import addon="script.module.livestreamer" />
  </requires>
  <extension
    point="xbmc.python.pluginsource"
    library="default.py">
   <provides>video</provides>
  </extension>
  <extension point="xbmc.service" library="service/proxy_service.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary>Play videos of different sports streaming sites</summary>
    <description>Play videos of different sports streaming sites</description>
    <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
    <platform>all</platform>
  </extension>
</addon>


<addon id="repository.reposo" name="Reposo oficial" version="1.1.0" provider-name="Reposo">
	<extension point="xbmc.addon.repository" name="Kodi-Mexico official Repo">
		<info compressed="false">https://raw.githubusercontent.com//osobrilloso/Reposo/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com//osobrilloso/Reposo/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com//osobrilloso/Reposo/master</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Reposo repo oficial oso</summary>
   		<description lang="en">Instala los Addons de Reposo</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
