<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.pelisalacarta"
    name="pelisalacarta"
    version="Edition"
    provider-name="Community">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.libtorrent" optional="true"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="es">Películas y series a la carta</summary>
    <description lang="es">Películas, series, documentales, anime, ... Todo está en Internet, y ahora en tu media center.</description>
    <summary lang="en">Movies and TV Shows on demand</summary>
    <description lang="en">Movies, Series, Documentaries, Anime, ... Everything is on the net, and now on your media center.</description>
    <platform>all</platform>
    <license>GNU GPL v3</license>
    <website>http://blog.tvalacarta.info/plugin-xbmc/pelisalacarta</website>
    <email>tvalacarta@gmail.com</email>
    <source>https://github.com/pelisalacarta-ce/pelisalacarta-ce</source>
  </extension>
  <extension point="xbmc.service" library="library_service.py" start="login|startup">
  </extension>
</addon>


<addon id="repository.reposo" name="Reposo oficial" version="1.1.0" provider-name="Reposo">
	<extension point="xbmc.addon.repository" name="Kodi-Mexico official Repo">
		<info compressed="false">https://raw.githubusercontent.com//osobrilloso/Reposo/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com//osobrilloso/Reposo/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com//osobrilloso/Reposo/master</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Reposo repo oficial oso</summary>
   		<description lang="en">Instala los Addons de Reposo</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
